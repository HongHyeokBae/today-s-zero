<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" android:background="@drawable/text_line"
       >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:padding="10dp"
            android:orientation="horizontal">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9" android:padding="10dp"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/notice_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="9sp"
                    android:textColor="@color/gray"
                    android:text="" />

            <TextView
                    android:id="@+id/notice_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text="" />
        </LinearLayout>

        <ImageView
                android:id="@+id/notice_more"
                android:src="@drawable/ic_notice_close"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
    </LinearLayout>

    <TextView
            android:padding="10dp"
            android:id="@+id/notice_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" android:background="@color/lightGray"
            android:text="" />

</LinearLayout>