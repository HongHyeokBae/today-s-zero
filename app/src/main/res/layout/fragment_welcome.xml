<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/colorPrimary"
             tools:context=".WelcomeFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름과\n총 급여를 입력해 주세요"
                android:layout_marginTop="56dp"
                android:textSize="28sp"
                style="@style/spoqa_text_white"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="총 급여액은 제로 페이 사용 금액에 따른 예상 소득공제\n혜택을 계산하기 위해 사용됩니다."
                style="@style/spoqa_text_white"
                android:layout_marginTop="8dp"
                android:textSize="12sp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이름"
                style="@style/spoqa_text_white"
                android:textSize="16sp"
                android:layout_marginTop="24dp"/>

        <android.support.v7.widget.AppCompatEditText
                android:id="@+id/user_name_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/UserInfoEditTextStyle"
                android:theme="@style/UserInfoEditTextStyle"
                android:maxLines="1"
                android:inputType="text"
                android:layout_marginEnd="8dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="총 급여액"
                style="@style/spoqa_text_white"
                android:textSize="16sp"
                android:layout_marginTop="16dp"/>

        <android.support.v7.widget.AppCompatEditText
                android:id="@+id/user_income_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/UserInfoEditTextStyle"
                android:theme="@style/UserInfoEditTextStyle"
                android:inputType="number"
                android:maxLines="1"
                android:layout_marginEnd="8dp"/>

    </LinearLayout>


</FrameLayout>